#!/bin/sh

realpath () {
(
  TARGET_FILE="$1"

  cd "$(dirname "$TARGET_FILE")"
  TARGET_FILE=$(basename "$TARGET_FILE")

  COUNT=0
  while [ -L "$TARGET_FILE" -a $COUNT -lt 100 ]
  do
      TARGET_FILE=$(readlink "$TARGET_FILE")
      cd "$(dirname "$TARGET_FILE")"
      TARGET_FILE=$(basename "$TARGET_FILE")
      COUNT=$(($COUNT + 1))
  done

  if [ "$TARGET_FILE" = "." -o "$TARGET_FILE" = ".." ]; then
    cd "$TARGET_FILE"
    TARGET_FILEPATH=
  else
    TARGET_FILEPATH=/$TARGET_FILE
  fi

  echo "$(pwd -P)/$TARGET_FILE"
)
}

# Allow user and template_declares (see below) to add java options.
addJava () {
  java_opts="$java_opts $1"
}

# Allow user to specify java options. These get listed first per bash-template.
if [ -n "$JAVA_OPTS" ]
then
  addJava "$JAVA_OPTS"
fi

# Loads a configuration file full of default command line options for this script.
loadConfigFile() {
  cat "$1" | sed '/^\#/d;s/\r$//' | sed 's/^-J-X/-X/' | tr '\r\n' ' '
}


real_script_path="$(realpath "$0")"
app_home="$(realpath "$(dirname "$real_script_path")")"
lib_dir="$(realpath "${app_home}/../lib")"

app_mainclass=Main

script_conf_file="${app_home}/../conf/application.ini"
app_classpath="$lib_dir/default.template-0.1.2.jar:$lib_dir/org.scala-lang.scala-library-2.12.8.jar:$lib_dir/com.thesamet.scalapb.scalapb-runtime_2.12-0.7.1.jar:$lib_dir/com.thesamet.scalapb.lenses_2.12-0.7.0-test2.jar:$lib_dir/com.lihaoyi.fastparse_2.12-1.0.0.jar:$lib_dir/com.lihaoyi.fastparse-utils_2.12-1.0.0.jar:$lib_dir/com.lihaoyi.sourcecode_2.12-0.1.4.jar:$lib_dir/net.debasishg.redisclient_2.12-3.4.jar:$lib_dir/commons-pool.commons-pool-1.6.jar:$lib_dir/com.typesafe.akka.akka-actor_2.12-2.5.19.jar:$lib_dir/com.typesafe.config-1.3.3.jar:$lib_dir/org.scala-lang.modules.scala-java8-compat_2.12-0.8.0.jar:$lib_dir/com.typesafe.akka.akka-slf4j_2.12-2.5.19.jar:$lib_dir/org.slf4j.slf4j-api-1.7.25.jar:$lib_dir/com.typesafe.akka.akka-stream_2.12-2.5.19.jar:$lib_dir/com.typesafe.akka.akka-protobuf_2.12-2.5.19.jar:$lib_dir/org.reactivestreams.reactive-streams-1.0.2.jar:$lib_dir/com.typesafe.ssl-config-core_2.12-0.3.6.jar:$lib_dir/org.scala-lang.modules.scala-parser-combinators_2.12-1.1.1.jar:$lib_dir/com.typesafe.akka.akka-cluster_2.12-2.5.19.jar:$lib_dir/com.typesafe.akka.akka-remote_2.12-2.5.19.jar:$lib_dir/io.netty.netty-3.10.6.Final.jar:$lib_dir/io.aeron.aeron-driver-1.12.0.jar:$lib_dir/org.agrona.agrona-0.9.27.jar:$lib_dir/io.aeron.aeron-client-1.12.0.jar:$lib_dir/com.typesafe.akka.akka-cluster-sharding_2.12-2.5.19.jar:$lib_dir/com.typesafe.akka.akka-distributed-data_2.12-2.5.19.jar:$lib_dir/org.lmdbjava.lmdbjava-0.6.1.jar:$lib_dir/com.github.jnr.jnr-ffi-2.1.7.jar:$lib_dir/com.github.jnr.jffi-1.2.16-native.jar:$lib_dir/com.github.jnr.jffi-1.2.16.jar:$lib_dir/org.ow2.asm.asm-5.0.3.jar:$lib_dir/org.ow2.asm.asm-commons-5.0.3.jar:$lib_dir/org.ow2.asm.asm-tree-5.0.3.jar:$lib_dir/org.ow2.asm.asm-analysis-5.0.3.jar:$lib_dir/org.ow2.asm.asm-util-5.0.3.jar:$lib_dir/com.github.jnr.jnr-x86asm-1.0.2.jar:$lib_dir/com.github.jnr.jnr-constants-0.9.9.jar:$lib_dir/com.typesafe.akka.akka-persistence_2.12-2.5.19.jar:$lib_dir/com.typesafe.akka.akka-cluster-tools_2.12-2.5.19.jar:$lib_dir/org.flywaydb.flyway-core-4.2.0.jar:$lib_dir/com.typesafe.slick.slick_2.12-3.2.3.jar:$lib_dir/com.github.tminglei.slick-pg_2.12-0.16.1.jar:$lib_dir/com.github.tminglei.slick-pg_core_2.12-0.16.1.jar:$lib_dir/org.scala-lang.scala-reflect-2.12.8.jar:$lib_dir/org.postgresql.postgresql-42.2.2.jar:$lib_dir/com.typesafe.slick.slick-hikaricp_2.12-3.2.3.jar:$lib_dir/com.zaxxer.HikariCP-2.5.1.jar:$lib_dir/tyrex.tyrex-1.0.1.jar:$lib_dir/org.typelevel.cats-core_2.12-1.4.0.jar:$lib_dir/org.typelevel.cats-macros_2.12-1.4.0.jar:$lib_dir/org.typelevel.machinist_2.12-0.6.5.jar:$lib_dir/org.typelevel.cats-kernel_2.12-1.4.0.jar:$lib_dir/org.typelevel.cats-free_2.12-1.4.0.jar:$lib_dir/com.github.kxbmap.configs_2.12-0.4.4.jar:$lib_dir/com.typesafe.akka.akka-http-spray-json_2.12-10.1.7.jar:$lib_dir/com.typesafe.akka.akka-http_2.12-10.1.7.jar:$lib_dir/com.typesafe.akka.akka-http-core_2.12-10.1.7.jar:$lib_dir/com.typesafe.akka.akka-parsing_2.12-10.1.7.jar:$lib_dir/io.spray.spray-json_2.12-1.3.5.jar:$lib_dir/com.outworkers.phantom-jdk8_2.12-2.24.2.jar:$lib_dir/com.outworkers.phantom-dsl_2.12-2.24.2.jar:$lib_dir/com.outworkers.phantom-connectors_2.12-2.24.2.jar:$lib_dir/org.slf4j.log4j-over-slf4j-1.7.25.jar:$lib_dir/com.datastax.cassandra.cassandra-driver-core-3.4.0.jar:$lib_dir/com.google.guava.guava-19.0.jar:$lib_dir/io.dropwizard.metrics.metrics-core-3.2.2.jar:$lib_dir/com.github.jnr.jnr-posix-3.0.27.jar:$lib_dir/org.typelevel.macro-compat_2.12-1.1.1.jar:$lib_dir/com.chuusai.shapeless_2.12-2.3.2.jar:$lib_dir/joda-time.joda-time-2.9.9.jar:$lib_dir/org.joda.joda-convert-1.8.1.jar:$lib_dir/ai.bale.server.commons-kafka_2.12-1.0.100.jar:$lib_dir/ai.bale.server.commons-cluster_2.12-1.0.100.jar:$lib_dir/ch.qos.logback.logback-classic-1.2.3.jar:$lib_dir/ch.qos.logback.logback-core-1.2.3.jar:$lib_dir/com.typesafe.scala-logging.scala-logging_2.12-3.9.0.jar:$lib_dir/org.scalatest.scalatest_2.12-3.0.4.jar:$lib_dir/org.scalactic.scalactic_2.12-3.0.4.jar:$lib_dir/org.scala-lang.modules.scala-xml_2.12-1